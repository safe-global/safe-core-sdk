{
  "extends": "../../tsconfig.settings.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@/typechain/*": ["./typechain/*"],
      "@/hardhat/*": ["./hardhat/*"],
      "@/tests/*": ["./tests/*"]
    },
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "include": ["src", "src/**/*.json", "typechain", "tests", "hardhat", "hardhat.config.ts"]
}
